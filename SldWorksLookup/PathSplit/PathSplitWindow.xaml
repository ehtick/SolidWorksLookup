<Window
    x:Class="SldWorksLookup.PathSplit.PathSplitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SldWorksLookup.PathSplit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="600"
    Height="300"
    d:DataContext="{d:DesignInstance Type=local:PathSplitWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Sketchs}" SelectedItem="{Binding SelectedSketch}" />

        <ListBox
            Grid.Column="1"
            ItemsSource="{Binding SketchChains}"
            SelectedItem="{Binding SelectedSketchChain}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="50">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="15"
                            FontWeight="Black"
                            Text="{Binding Name}" />
                        <TextBlock
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            Text="{Binding Length}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="步长:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="30,2,0,2"
                            Text="{Binding StepLength, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="75"
                            Height="23"
                            Margin="0,0,100,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{Binding ExportToCSVCommand}"
                            Content="导出" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="75"
                            Height="23"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{Binding ExportCommand}"
                            Content="查看" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
